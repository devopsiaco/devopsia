rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function hasServerTimestamp(field) {
      return (field in request.resource.data) && request.resource.data[field] == request.time;
    }

    function preservesCreatedAt() {
      return !('createdAt' in resource.data) || resource.data.createdAt == request.resource.data.createdAt;
    }

    function validUidField() {
      return !('uid' in request.resource.data) || request.resource.data.uid == request.auth.uid;
    }

    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && hasServerTimestamp('createdAt') && validUidField();
      allow update: if isOwner(userId) && preservesCreatedAt() && validUidField();
    }

    match /users/{userId}/{coll}/{docId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId) && hasServerTimestamp('createdAt') && validUidField();
      allow update: if isOwner(userId) && preservesCreatedAt() && validUidField();
      allow delete: if isOwner(userId);
    }
  }
}
